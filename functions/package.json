{
  "name": "qode-functions",
  "description": "Cloud Functions for Qode promo code app",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "populate": "node lib/populators/populateServices.js",
    "populate:codes": "node lib/populators/populatePromoCodes.js",
    "add-service": "npm run build && node addService.js",
    "init:votescores": "node lib/populators/initializeVoteScores.js",
    "fix:votescores": "npm run build && node lib/initVoteScores.js",
    "update:counts": "node lib/scheduledTasks/updateServiceCounts.js",
    "clean:legacy": "npm run build && echo 'Deploy function first, then call removeLegacyUserFields from client'"
  },
  "engines": {
    "node": ">=20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0"
  },
  "private": true
}
